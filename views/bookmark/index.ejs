<!doctype html>
  <head>
    <meta charset="utf-8">
    <%- include("../share/stylesheets.ejs") %>
  </head>
  <body class="bg-light">
  <%- include("../share/navbar.ejs") %>
    <main>
      <div class="py-5 text-center">
        <h2>お気に入り画面</h2>
      </div>
      <div class="container">
        <div class="row row-cols-1 row-cols-md-4 g-3">
          <% for (var item of list) { %>
          <form method="POST" action="/bookmark/delete/confirm">
            <div class="col">
              <div class="card shadow-sm">
                <img src="https://image.tmdb.org/t/p/w300_and_h450_bestv2<%= item.cinema_info[0].poster %>" class="img-fluid">
                <div class="card-body">
                  <div class="text-truncate" >
                    <p class="card-text"><%= item.cinema_info[0].title %></p>
                  </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <input type="submit" class="btn btn-sm btn-outline-secondary" value="削除"/>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="poster" value="<%= item.cinema_info[0].poster %>">
                        <input type="hidden" name="title" value="<%= item.cinema_info[0].title %>"> 
                        <input type="hidden" name="release" value="<%= item.cinema_info[0].release %>">   
                    </div>
                    <small class="text-muted"><%= item.cinema_info[0].release %></small>
                </div>
                </div>
              </div>
            </div>
          </form>
          <% } %>
        </div>
      </div>
    </main>
  </body>
</html>
