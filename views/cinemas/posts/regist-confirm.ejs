
<!doctype html>
  <head>
    <title>登録確認画面</title>

    <%- include("../../share/stylesheets.ejs") %>
  </head>
  <body class="bg-light">
  <%- include("../../share/navbar.ejs") %>
    <div class="container">
      <main>
        <div class="py-5 text-center">
          <p class="font-weight-bold">
          <h2>登録確認画面</h2>
          </p>
        </div>

        <div class="row justify-content-center">
          <div class="col-md-7 col-lg-8">
            <% if (message && message.length !== 0) { %>
              <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <form>
              <div class="row g-3">
                <div class="col-12">
                  <div class="form-group">
                    <label for="title" class="form-label">映画タイトル</label>
                      <input type="text" readonly class="form-control-plaintext" id="title" name="title" value="<%= data.title %>">
                  </div>
                </div>

                <div class="col-10">
                  <div class="form-group">
                    <img src="https://image.tmdb.org/t/p/w300_and_h450_bestv2<%= data.poster %>" id="poster" name="poster" readonly class="form-control-plaintext">
                    <input type="hidden" name="poster" value="https://image.tmdb.org/t/p/w300_and_h450_bestv2<%= data.poster %>">
                  </div>
                </div>

                  <div class="col-md-3">
                    <div class="form-group">
                    <label for="release" class="form-label">公開日</label>
                      <input type="text" readonly class="form-control-plaintext" name="release" id="release" value="<%= data.release %>">
                    </div>
                  </div>
                </div>
                <hr class="my-4">

                <div class="form-group row">
                  <div class="col-sm-10">
                    <input type="submit" class="btn btn-secondary" formaction="/cinemas" formmethod="GET" value="戻る" />
                  </div>
                  <div class="col-sm-1">
                    <input type="submit" class="btn btn-primary" formaction="/cinemas/posts/regist/execute" formmethod="POST" value="登録" />
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
